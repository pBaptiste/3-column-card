---
    import { Image } from "astro:assets";
    import sedan from '../images/icon-sedans.svg'
    import suvs from '../images/icon-suvs.svg'
    import luxury from '../images/icon-luxury.svg'
    const columnsInfo = [
        {   icon: sedan,
            name : 'Sedans',
            desc: 'Choose a sedan for its affordability and excellent fuel economy. Ideal for cruising in the city or on your next road trip.',
            style: 'bg-orange text-orange rounded-t-lg lg:rounded-tr-none lg:rounded-l-lg',
        },
        {   
            icon: suvs,
            name : 'Suvs',
            desc: 'Take an SUV for its spacious interior, power, and versatility. Perfect for your next family vacation and off-road adventures.',
            style: 'bg-blue text-blue',
        },
        {   
            icon: luxury,
            name : 'Luxury',
            desc: 'Cruise in the best car brands without the bloated prices. Enjoy the enhanced comfort of a luxury rental and arrive in style.',
            style: 'bg-green text-green rounded-b-lg lg:rounded-bl-none lg:rounded-r-lg ',
        },
    ]
---

<article class="max-w-[327px] lg:max-w-[920px] max-h-[1326px] lg:max-h-[500px] rounded-lg flex flex-col lg:flex-row">
    {
        columnsInfo.map(item => (
            <div class={`${item.style} pl-[49px] pr-12 py-12 lg:p-12`}>
                <Image src={item.icon} alt=""/>
                <h2 class="text-light-grey font-display text-[2.5rem] font-bold uppercase mt-[35px] mb-[25px]">{item.name}</h2>
                <p class="text-white text-[.938rem] font-normal leading-[1.563rem] text-opacity-75 mb-[25px] lg:mb-[83px]">{item.desc}</p>
                <a class="pt-[11px] pb-3 px-[31.5px] rounded-[25px] bg-light-grey hover:bg-transparent focus:bg-transparent hover:border-white focus:border-white hover:border-[2px] focus:border-[2px] hover:text-white focus:text-white text-[.938rem] transition-colors duration-500 font-normal leading-[1.563rem]" href="#">Learn More</a>
            </div>
        ))
    }

</article>